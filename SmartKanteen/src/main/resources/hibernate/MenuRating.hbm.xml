<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.mastek.topcoders.smartkanteen.bean.MenuRating" table="MENU_RATING">
		<id name="menuRatingId" type="java.lang.Integer">
			<column name="MENU_RATING_ID" />
			<generator class="identity" />
		</id>
		<property name="countOfPeopleWhoHaveRated" type="java.lang.Integer" >
			<column name="COUNT_OF_PEOPLE_WHO_HAVE_RATED" />
		</property>
		<property name="currentAverageRating" type="java.lang.Integer" >
			<column name="CURRENT_AVERAGE_RATING INT" />
		</property>
  		<many-to-one name="itemId" column="ITEM_ID" unique="true"
			lazy="false" class="com.mastek.topcoders.smartkanteen.bean.Menu"
			not-null="true" cascade="all"/>
 		</class>
</hibernate-mapping>
